<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/ic_app_icon"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp"/>

        <TextView
            android:text="Respal에 오신것을 환영합니다."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Respal은 개발자를 위한 이력서 공유 플랫폼입니다."
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:text="SNS 로그인"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/github_login_btn"
                android:src="@drawable/ic_github"
                android:background="@drawable/background_button_acacac"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/google_login_btn"
                android:src="@drawable/ic_google"
                android:background="@drawable/background_button_acacac"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/kakao_login_btn"
                android:src="@drawable/ic_kakao"
                android:background="@drawable/background_button_acacac"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="0.75dp"
                android:background="@color/color_black"/>

            <TextView
                android:text="Respal 아이디로 로그인"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="0.75dp"
                android:background="@color/color_black"/>

        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:text="이메일"
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email_input_text"
            android:inputType="text"
            android:textSize="14sp"
            android:hint="example@example.com"
            android:textColor="@color/color_black"
            android:textColorHint="@color/color_ACACAC"
            android:background="@drawable/background_text_acacac"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:text="비밀번호"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:background="@drawable/background_text_acacac"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pw_input_text"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:hint="비밀번호 입력(문자, 숫자, 특수문자 포함 8~20자)"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_ACACAC"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <ImageView
                android:id="@+id/pw_eye_btn"
                android:src="@drawable/ic_eye_invisible"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:layout_width="16dp"
                android:layout_height="16dp">

            </ImageView>

        </LinearLayout>

        <TextView
            android:id="@+id/find_account_btn"
            android:text="계정찾기"
            android:textColor="@color/color_6232E9"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:text="로그인"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button_3b3b3b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="아직 회원이 아니신가요?"
                android:textColor="@color/color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/sign_up_btn"
                android:text="회원가입"
                android:textColor="@color/color_6232E9"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</layout>