<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/app_icon"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="80dp"/>

        <TextView
            android:text="계정찾기"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/color_black"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="회원 가입시 입력하신 이메일 주소를 입력하시면,\n해당 이메일로 변경된 비밀번호를 보내드립니다."
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="20dp"
            android:text="이메일 주소"
            android:textSize="12sp"
            android:textColor="@color/color_black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email_input_text"
            android:background="@drawable/button_background_acacac"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

        <LinearLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_btn"
                android:text="취소"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:background="@drawable/button_background_acacac"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"/>

            <View
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/find_account_btn"
                android:text="계정찾기"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:background="@drawable/button_background_3b3b3b"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/find_account_failed_view"
            android:background="@drawable/button_background_fff9f9"
            android:visibility="gone"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:src="@drawable/warning_ic"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="계정찾기 실패"
                    android:textColor="@color/color_A11818"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="해당 이메일 주소를 찾을 수 없습니다."
                    android:textColor="@color/color_E78383"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>