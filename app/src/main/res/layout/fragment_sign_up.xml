<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/app_icon"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="80dp"/>

            <TextView
                android:text="Respal에 오신것을 환영합니다."
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Respal은 개발자를 위한 이력서 공유 플랫폼입니다."
                android:textSize="12sp"
                android:textColor="@color/color_black"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:text="SNS 회원가입"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/github_login_btn"
                    android:src="@drawable/github_ic"
                    android:background="@drawable/button_background_acacac"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/google_login_btn"
                    android:src="@drawable/google_ic"
                    android:background="@drawable/button_background_acacac"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/kakao_login_btn"
                    android:src="@drawable/kakao_ic"
                    android:background="@drawable/button_background_acacac"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0.75dp"
                    android:background="@color/color_black"/>

                <TextView
                    android:text="회원가입에 필요한 기본정보를 입력해주세요."
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0.75dp"
                    android:background="@color/color_black"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:text="아이디"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/id_input_text"
                android:inputType="text"
                android:background="@drawable/button_background_acacac"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="비밀번호"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/pw_input_text"
                android:inputType="textPassword"
                android:background="@drawable/button_background_acacac"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="이메일"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/email_input_text"
                android:inputType="text"
                android:background="@drawable/button_background_acacac"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="직무"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/job_spinner"
                android:background="@drawable/spinner_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:text="닉네임"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/color_black"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nick_name_input_text"
                android:inputType="text"
                android:background="@drawable/button_background_acacac"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/terms_of_service_btn"
                    android:text="서비스 이용약관"
                    android:textColor="@color/color_6232E9"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/color_black"/>

                <TextView
                    android:id="@+id/privacy_policy_btn"
                    android:text="개인정보 처리 방침"
                    android:textColor="@color/color_6232E9"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sign_up_btn"
                android:text="회원가입"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@color/color_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="이미 회원이신가요?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/login_btn"
                    android:text="로그인"
                    android:textColor="@color/color_6232E9"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>